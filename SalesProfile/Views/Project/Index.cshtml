@model List<SalesProfile.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>GitHub Link</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td><a href="@project.GitHubUrl" target="_blank">@project.GitHubUrl</a></td>
                <td>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Project</a>
