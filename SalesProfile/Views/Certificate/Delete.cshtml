@model SalesProfile.Models.Certificate

@{
    ViewData["Title"] = "Delete Certificate";
}

<h2>Are you sure you want to delete this certificate?</h2>

<div>
    <h4>Certificate: @Model.Name</h4>
    <p>Institution: @Model.Institution</p>
    <p>Completion Date: @Model.CompletionDate.ToShortDateString()</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
